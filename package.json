    "@polkadot/extension-inject": ">= 0.44",
    "@polkadot/types": ">= 9",
    "@polkadot/util": ">= 10"
  },
  "devDependencies": {
    "@types/node": "^16.18.11",
    "@types/react": "^18.0.26",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "release-it": "^15.6.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "typedoc": "^0.23.24"
  }
